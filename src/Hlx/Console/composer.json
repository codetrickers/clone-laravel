{
    "name": "hlx/console",
    "description": "The Hlx Console package.",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "hlx/collections": "^1.0",
        "hlx/contracts": "^1.0",
        "hlx/macroable": "^1.0",
        "hlx/support": "^1.0",
        "hlx/view": "^1.0",
        "nunomaduro/termwind": "^1.13",
        "symfony/console": "^6.2",
        "symfony/process": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "Hlx\\Console\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "suggest": {
        "ext-pcntl": "Required to use signal trapping.",
        "dragonmantank/cron-expression": "Required to use scheduler (^3.3.2).",
        "guzzlehttp/guzzle": "Required to use the ping methods on schedules (^7.5).",
        "hlx/bus": "Required to use the scheduled job dispatcher (^1.0).",
        "hlx/container": "Required to use the scheduler (^1.0).",
        "hlx/filesystem": "Required to use the generator command (^1.0).",
        "hlx/queue": "Required to use closures for scheduled jobs (^1.0)."
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
