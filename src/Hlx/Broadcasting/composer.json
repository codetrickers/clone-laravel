{
    "name": "hlx/broadcasting",
    "description": "The Hlx Broadcasting package.",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "psr/log": "^1.0|^2.0|^3.0",
        "hlx/bus": "^1.0",
        "hlx/collections": "^1.0",
        "hlx/container": "^1.0",
        "hlx/contracts": "^1.0",
        "hlx/queue": "^1.0",
        "hlx/support": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Hlx\\Broadcasting\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "suggest": {
        "ext-hash": "Required to use the Ably and Pusher broadcast drivers.",
        "ably/ably-php": "Required to use the Ably broadcast driver (^1.0).",
        "pusher/pusher-php-server": "Required to use the Pusher broadcast driver (^6.0|^7.0)."
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
